# Brew
alias bubo="brew update; brew outdated"
alias bubc="brew upgrade; brew cleanup -s --force"
alias brfull="bubo; bubc; brew doctor"

# General
alias rm="rm -i"
alias clear=" clear"
alias pwd=" pwd"
alias exit=" exit"

# Git
alias ggpush='git push origin $(git_current_branch)'
alias ggpush+='git push origin $(git_current_branch) --force-with-lease'

# Shopify
alias glup='git pull && dev up'
alias ssctags="git ls-files starscream shopify config | /usr/local/opt/universal-ctags/bin/ctags -f tmp/tags --tag-relative=yes --extras=+f -L-"
